<%= render partial: 'shared/last_updated_by', locals: { last_update: @last_update } %>

<ol class="show">
  <li>
    <span>Name:</span>
    <%=h @venue.name %>
  </li>

  <li>
    <span>Address:</span>
    <%=h @venue.address %>
  </li>

  <li>
    <span>Postcode:</span>
    <%=h @venue.postcode %>
  </li>

  <li>
    <span>Area:</span>
    <%=h @venue.area %>
  </li>

  <li>
    <span>Coordinates:</span>
    <%=h @venue.coordinates %>
  </li>

  <li>
    <span>Nearest tube:</span>
    <%=h @venue.nearest_tube %>
  </li>

  <li>
    <span>Website:</span>
    <%= link_to @venue.website %>
  </li>
</ol>

<div class="actions">
  <%= link_to 'Edit', edit_venue_path(@venue) %>  |
  <%= conditional_delete_tag(@venue) %> |
  <%= link_to 'List', venues_path(anchor: "venue_#{@venue.id}") %> |
  <%= link_to 'New venue', new_venue_path %> |
  <%= link_to 'New Event at this venue',  new_event_path( venue_id: @venue.id) %>
</div>
