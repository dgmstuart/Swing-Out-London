<%= form_for(@organiser) do |f| %>
  <%= render "shared/error_messages", :target => @organiser %>

  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class='form-group'>
    <%= f.label :shortname %>
    <%= f.text_field :shortname %>
  </div>
  <div class='form-group'>
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>
  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class='form-group'>
    <%= f.submit action %>
  </div>

<% end %>
