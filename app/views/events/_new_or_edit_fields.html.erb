<%= form_for(@event) do |f| %>
<%= render "shared/error_messages", :target => @event %>

<ol>
    <!-- WHAT? -->
    <li>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </li>
    <li>
        <%= f.label :shortname %>
        <%= f.text_field :shortname %>
    </li>
    <li>
        <%= f.label :venue %>
        <%= f.select :venue_id, venue_select, {:include_blank => true} %>
        <%= link_to 'New Venue', new_venue_path %>
    </li>
    <li>
        <%= f.label :social_organiser %>
        <%= f.select :social_organiser_id, organiser_select, {:include_blank => true} %>
        <%= link_to 'New Organiser', new_organiser_path %>
    </li>
    <li>
        <%= f.label :class_organiser %>
        <%= f.select :class_organiser_id, organiser_select, {:include_blank => true} %>
    </li>
    <li>
        <%= f.label :event_type %>
        <%= f.select :event_type, Event::EVENT_TYPES, {:include_blank => true} %>
        <%= f.label :has_taster, "Has a taster?", :class => 'inline_label'  %>
        <%= f.check_box :has_taster  %>
        <%= f.label :has_class, "Has a class?", :class => 'inline_label'   %>
        <%= f.check_box :has_class  %>
        <%= f.label :has_social, "Has social?", :class => 'inline_label'   %>
        <%= f.check_box :has_social  %>
    </li>
    <li>
        <%= f.label :class_style %>
        <%= f.text_field :class_style %>
    </li>
    <li>
        <%= f.label :course_length %>
        <%= f.text_field :course_length, :size => 2, :class =>"shortfield" %> weeks
    </li>
    
    <!-- WHEN? -->
    <li>
        <%= f.label :day %>
        <%= f.select :day, DAYNAMES %>
        every <%= f.text_field :frequency, :size => 2, :class =>"shortfield" %> weeks
    </li>
    <li>
        <%= f.label :dates %>
        <%= f.text_field :date_array, :value => @event.print_dates %>
    </li>
    <li>
        <%= f.label :cancelled_dates %>
        <%= f.text_field :cancellation_array, :value => @event.print_cancellations %>
    </li>
    <li>
        <%= f.label :first_date %>
        <%= f.text_field :first_date, value: @event.first_date.to_s, :size => 10, :style => "float:left;", :class =>"shortfield" %>
        <%= f.label :last_date, nil, :class => "inline_label" %>
        <%= f.text_field :last_date, value: @event.last_date.to_s, :size => 10, :class =>"shortfield"%>
    </li>

    <li>
        <%= f.label :url %>
        <%= f.text_field :url %>
    </li>
    <li>
        <%= f.submit action %>
    </li>
</ol>
<% end %>
